<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_enabled="false" android:color="@color/white">
        <shape android:shape="rectangle">
            <solid android:color="#3f5893"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true" android:color="@color/white">
        <shape android:shape="rectangle">
            <solid android:color="#2f426f"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false" android:color="@color/white">
        <shape android:shape="rectangle">
            <solid android:color="#3f5893"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
