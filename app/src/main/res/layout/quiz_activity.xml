<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/llCheckSkip" android:layout_below="@+id/toolbar">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
            <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/llScore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:layout_alignParentLeft="true">
                <TextView android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold" android:textColor="@color/red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Score"/>
                <TextView android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/tvScore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="0"/>
                <TextView android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/tvPlus" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0"/>
            </LinearLayout>
            <TextView android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:layout_centerHorizontal="true"/>
            <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/llHigh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                <TextView android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold" android:textColor="@color/red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="High"/>
                <TextView android:textAppearance="@android:style/TextAppearance.Medium" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/tvHigh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="0"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp">
            <com.example.english.customview.CustomViewPager android:id="@+id/pager" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/llCheckSkip" android:padding="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:minHeight="40dp" android:layout_above="@+id/llAds">
        <TextView android:textAppearance="@android:style/TextAppearance.Medium" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvCheck" android:background="@drawable/bg_check_disable" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="40dp" android:text="Check" android:layout_weight="4"/>
        <TextView android:textAppearance="@android:style/TextAppearance.Medium" android:textColor="@color/white" android:gravity="center" android:id="@+id/tvSkip" android:background="@drawable/selector_skip" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:minHeight="40dp" android:text="Skip" android:layout_weight="1"/>
    </LinearLayout>
    <include layout="@layout/check"/>
    <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:id="@+id/llAds" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
    <ProgressBar android:id="@+id/progressBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
</RelativeLayout>
