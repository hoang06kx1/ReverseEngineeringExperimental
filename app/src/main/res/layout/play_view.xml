<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/custom_color_action_bar" android:layout_width="match_parent" android:layout_height="40dp">
    <ImageView android:id="@+id/btnVoice" android:padding="4dp" android:layout_width="50dp" android:layout_height="match_parent" android:src="@drawable/ic_voice" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <ImageButton android:id="@+id/btnPlay" android:background="@null" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_play_footer" android:scaleType="fitCenter" android:layout_toRightOf="@+id/btnVoice" android:layout_centerVertical="true"/>
    <ImageButton android:id="@+id/btnPlayAll" android:background="@null" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_play_all" android:scaleType="fitCenter" android:layout_centerInParent="true"/>
    <ImageButton android:id="@+id/btnSlow" android:background="@null" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/ic_slow" android:scaleType="fitCenter" android:layout_toLeftOf="@+id/btnVolume" android:layout_centerVertical="true"/>
    <ImageButton android:id="@+id/btnVolume" android:background="@null" android:padding="2dp" android:layout_width="50dp" android:layout_height="match_parent" android:src="@drawable/ic_volume" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
